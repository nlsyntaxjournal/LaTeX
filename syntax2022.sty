% MANUSCRIPT TITLE AND AUTHOR

\renewcommand{\maketitle}{
\begin{flushleft}
\setlength{\baselineskip}{1.5\baselineskip}
\articletypelabel

{\Large \bfseries \@title}

\@author

\end{flushleft}
}






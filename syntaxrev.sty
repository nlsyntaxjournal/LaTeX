% HEADERS AND FOOTERS
\RequirePackage{fancyhdr}
\pagestyle{fancy} 

\newcommand{\runninghead}{
\fancyhead{} % clear all header fields 
\fancyhead[LE]{\thepage \quad  \textit{\@brieftitle}} 
%in the pub version, the above "\@brieftitle" is replaced with "\@author" to print authors in left running head
\fancyhead[RO]{\textit{\@brieftitle} \quad \thepage} 
\fancyfoot{} % clear all footer fields 
%\fancyfoot[LE,LO]{\scriptsize \copyright \ 2009 The Author \\ Journal compilation \copyright  \ 2009 Blackwell Publishing Ltd} 
\renewcommand{\headrulewidth}{0.4pt} 
\renewcommand{\footrulewidth}{0pt} 
}

\newcommand{\syntaxfirstpage}[1]{%

\fancypagestyle{plain}{%
\fancyhead{} 	% clear all header fields
%\fancyhead[L]{#1}
%first page volume/page header is suppressed in the review format
\renewcommand{\headrulewidth}{0.0pt}
\renewcommand{\footrulewidth}{0.0pt}
}

\thispagestyle{plain}
}




